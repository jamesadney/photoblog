<div class="image-box left small-6 large-3 columns">
  <% if photo.image_url.nil? %>
    <div class="placeholder"></div>
  <% else %>
    <%= link_to image_tag(photo.image_url.to_s), photo.image_url.to_s %>
  <% end %>
  <div>
    <h6><%= photo.caption %></h6>
    <small class="upload-time"><%= photo.upload_time %></small>
  </div>
</div>
